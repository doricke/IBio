<h1>Listing synonyms</h1>

<table>
  <thead>
    <tr>
      <th>Itype</th>
      <th>Source</th>
      <th>Synonym name</th>
      <th>Table name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @synonyms.each do |synonym| %>
      <tr>
        <td><%= synonym.itype_id %></td>
        <td><%= synonym.source_id %></td>
        <td><%= synonym.synonym_name %></td>
        <td><%= synonym.table_name %></td>
        <td><%= link_to 'Show', synonym %></td>
        <td><%= link_to 'Edit', edit_synonym_path(synonym) %></td>
        <td><%= link_to 'Destroy', synonym, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Synonym', new_synonym_path %>
