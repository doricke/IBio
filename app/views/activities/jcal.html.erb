  <%= javascript_include_tag 'datetimepicker' %>
  <title>Reservations: <%= controller.action_name %></title>
</head>

<body>
<%= error_messages_for :reservation %>
<% unless flash[:error].blank? %>
	<h2 align="center", style="color: #ff0000"><%= flash[:error] %></h2>
<% end %>


<%= render :partial => 'jcal', :locals => {:types => @types} %>
<% end %>
<div id="newResForm" style="display:none; text-align:left;">
	<label>Activity Name:<br /><input type="text" name="activityName" value="" size="30" /></label><br />
	<label>Intensity:<br /><input type="text" name="intensity" value="" size="30"/></label><br />
	<label>Qualifier:<br /><input type="text" name="qualifier" value="" size="30"/></label><br />
	<label>Notes:<br />
		<textarea name="notes" rows="5" cols="40"></textarea>
	</label><br />
</div>
<div id="newResForm2" style="display:none; text-align:left;">
  <label>Activity Name:<br /><input type="text" name="activityName" value="" size="30" /></label><br />
  <label>Intensity:<br /><input type="text" name="intensity" value="" size="30"/></label><br />
  <label>Qualifier:<br /><input type="text" name="qualifier" value="" size="30"/></label><br />
	<label>Start:<br /><input id="datetimepicker" type="text" name="start" size="25" />
				<a href="javascript:NewCal('datetimepicker','MMMddyyyy', true)"><img src="../images/cal.gif" width="16" height="16" border="0" alt="pick a date" /></a>
	</label><br />
	<label>end:<br /><input id="datetimepicker2" type="text" name="end" size="25" />
				<a href="javascript:NewCal('datetimepicker2','MMMddyyyy', true)"><img src="../images/cal.gif" width="16" height="16" border="0" alt="pick a date" /></a>
	</label><br />
	<label>Notes:<br /><textarea name="notes" rows="5" cols="40"></textarea></label><br />
</div>
