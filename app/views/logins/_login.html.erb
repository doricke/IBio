<%= form_tag({:action => 'verify'}, {:method => "post"})%>
  <table>
    <thead></thead>
    <tbody>
      <tr>
        <td><label>Login name:</label></td>
        <td><input type="text_field" name="login_name" maxlength="12" size="20" style="width:200px"></td>
      </tr><tr>
        <td><label for="user_password">Password:</label></td>
        <td><%= password_field_tag :password, params[:password], :size => 20, :style=>"width:200px" %></td>
      </tr>
    </tbody>
  </tbody>
  <br />
<%= submit_tag "Login" %>

		


